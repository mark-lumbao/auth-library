{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@app": ["src/index.ts"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types/index.d.ts"]
    },
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib"]
}
